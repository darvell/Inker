<Window x:Class="Inker.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Inker.Views"
        xmlns:cal="http://www.caliburnproject.org"
        >

    <Grid Background="White" cal:Message.Attach="[Event KeyDown] = [Action HandleKeyInput($eventArgs)]">
        <ContentControl x:Name="Canvas"></ContentControl>
        <ContentControl x:Name="KeyGrabber" Visibility="Hidden" IsHitTestVisible="False"></ContentControl>

    </Grid>

</Window>