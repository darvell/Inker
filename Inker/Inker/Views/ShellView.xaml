<controls:MetroWindow x:Class="Inker.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Inker">

    <Grid Background="White" cal:Message.Attach="[Event KeyDown] = [Action HandleKeyInput($eventArgs)]">
        <ContentControl x:Name="Canvas"></ContentControl>
        <ContentControl x:Name="KeyGrabber" Visibility="Hidden" IsHitTestVisible="False"></ContentControl>
    </Grid>
</controls:MetroWindow>